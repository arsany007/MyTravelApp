<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/ic_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:src="@drawable/ic_logos"/>

                <LinearLayout
                    android:layout_below="@id/img_logo_main"
                    android:id="@+id/linear_swipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_swipe"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swipe to learn more"
                        android:textColor="@color/white"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_arrow"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_15sdp"/>

                </LinearLayout>

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_member"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_below="@id/linear_swipe"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/rounded_border"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_17sdp"/>

        <RelativeLayout
            android:id="@+id/relative_already_user"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_register">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_register_white"
                android:drawablePadding="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Already User"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_register"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_swipe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:drawableLeft="@drawable/ic_register"
                android:drawablePadding="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Register For Free"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_logging_without_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rounded_border"
            android:textSize="@dimen/_13sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/text_login_without_acc"/>
    </LinearLayout>

</layout>